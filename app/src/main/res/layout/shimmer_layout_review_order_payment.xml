<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cvDetailOfBill"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="35dp"
    app:cardElevation="0dp"
    android:layout_marginTop="10dp"
    android:layout_below="@id/cvCoinUse"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="150dp"
    android:backgroundTint="@color/light_grey_horizons_background">

    <TextView
        android:id="@+id/tvLabelPaymentDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_details_payment"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/arial_bold"
        android:textColor="@color/black_font_color" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="22dp"
        android:paddingBottom="17.5dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/background_complate_details_bill">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_number_of_items"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/arial_medium"
                android:textColor="@color/platinum_grey_background" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerTvNumberOfItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true"
                app:shimmer_base_alpha="0.7"
                app:shimmer_direction="left_to_right"
                app:shimmer_duration="500"
                app:shimmer_repeat_count="@android:integer/config_shortAnimTime"
                app:shimmer_repeat_delay="500"
                app:shimmer_shape="linear"
                app:shimmer_tilt="0"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvNumberOfItem"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/shimmer_corner_empat_dp_400"
                    android:textSize="11.5sp"
                    android:fontFamily="@font/arial_medium"
                    android:textColor="@color/black_font_color"/>

            </com.facebook.shimmer.ShimmerFrameLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_subtotal_items"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/arial_medium"
                android:textColor="@color/platinum_grey_background" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerTvSubTotalItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true"
                app:shimmer_base_alpha="0.7"
                app:shimmer_direction="left_to_right"
                app:shimmer_duration="500"
                app:shimmer_repeat_count="@android:integer/config_shortAnimTime"
                app:shimmer_repeat_delay="500"
                app:shimmer_shape="linear"
                app:shimmer_tilt="0"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvSubTotalItems"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/shimmer_corner_empat_dp_400"
                    android:textSize="11.5sp"
                    android:fontFamily="@font/arial_medium"
                    android:textColor="@color/black_font_color"/>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_coin_used"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/arial_medium"
                android:textColor="@color/platinum_grey_background" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerTvCoinUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true"
                app:shimmer_base_alpha="0.7"
                app:shimmer_direction="left_to_right"
                app:shimmer_duration="500"
                app:shimmer_repeat_count="@android:integer/config_shortAnimTime"
                app:shimmer_repeat_delay="500"
                app:shimmer_shape="linear"
                app:shimmer_tilt="0"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvCoinUse"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/shimmer_corner_empat_dp_400"
                    android:textSize="11.5sp"
                    android:fontFamily="@font/arial_medium"
                    android:textColor="@color/red"/>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_voucher_or_promo"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/arial_medium"
                android:textColor="@color/platinum_grey_background" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerTvDiscountsAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true"
                app:shimmer_base_alpha="0.7"
                app:shimmer_direction="left_to_right"
                app:shimmer_duration="500"
                app:shimmer_repeat_count="@android:integer/config_shortAnimTime"
                app:shimmer_repeat_delay="500"
                app:shimmer_shape="linear"
                app:shimmer_tilt="0"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvDiscountsAmount"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/shimmer_corner_empat_dp_400"
                    android:textSize="11.5sp"
                    android:fontFamily="@font/arial_medium"
                    android:textColor="@color/red"/>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ppn_label"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/arial_medium"
                android:textColor="@color/platinum_grey_background" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerTvSpesialisasiFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true"
                app:shimmer_base_alpha="0.7"
                app:shimmer_direction="left_to_right"
                app:shimmer_duration="500"
                app:shimmer_repeat_count="@android:integer/config_shortAnimTime"
                app:shimmer_repeat_delay="500"
                app:shimmer_shape="linear"
                app:shimmer_tilt="0"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvSpesialisasiFee"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/shimmer_corner_empat_dp_400"
                    android:textSize="11.5sp"
                    android:fontFamily="@font/arial_medium"
                    android:textColor="@color/black_font_color"/>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_total_price"
                android:textSize="13.2sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerTvTotalPriceOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true"
                app:shimmer_base_alpha="0.7"
                app:shimmer_direction="left_to_right"
                app:shimmer_duration="500"
                app:shimmer_repeat_count="@android:integer/config_shortAnimTime"
                app:shimmer_repeat_delay="500"
                app:shimmer_shape="linear"
                app:shimmer_tilt="0"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvTotalPriceOrders"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:ellipsize="end"
                    android:background="@drawable/shimmer_corner_lima_dp_400"
                    android:textSize="12sp"
                    android:fontFamily="@font/arial_bold"
                    android:textColor="@color/black"/>

        </com.facebook.shimmer.ShimmerFrameLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>