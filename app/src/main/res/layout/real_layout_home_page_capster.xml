<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Toolbar and Header -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_user_profile"
            android:contentDescription="@string/profile_picture"
            app:layout_constraintTop_toTopOf="@id/tvAppName"
            app:layout_constraintBottom_toBottomOf="@id/tvAppName"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_home_page_capster"
            android:textSize="19.5sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivPesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:src="@drawable/ic_email"
            android:layout_marginTop="3.5dp"
            android:contentDescription="@string/icon_message_desc"
            app:layout_constraintTop_toTopOf="@id/tvAppName"
            app:layout_constraintBottom_toBottomOf="@id/tvAppName"
            app:layout_constraintEnd_toStartOf="@id/ivSettings"/>

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_setting"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="3dp"
            android:contentDescription="@string/icon_setting_desc"
            app:layout_constraintTop_toTopOf="@id/tvAppName"
            app:layout_constraintBottom_toBottomOf="@id/tvAppName"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_shake"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black_font_color"
            android:fontFamily="@font/arial_bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="17.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAppName"/>

        <!-- Card Balance -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvKartu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="7dp"
            app:cardElevation="2.5dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome">

            <ImageView
                android:id="@+id/iKartuId"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="fitXY"
                android:src="@drawable/card_balance"
                android:contentDescription="@string/image_card_balance_desc" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingEnd="0dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/arial_medium"
                    tools:text="@string/example_user_name"
                    android:textSize="12sp"
                    android:textColor="@color/white_text_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_bold"
                    android:paddingTop="17dp"
                    android:text="@string/total_income_label"
                    android:textSize="13sp"
                    android:textColor="#FEFEFE" />

                <TextView
                    android:id="@+id/tvSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/arial_bold"
                    tools:text="@string/example_income"
                    android:textColor="@color/white_text_color"
                    android:textSize="28sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:id="@+id/ivPoints"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:src="@drawable/fill_point" />

                    <TextView
                        android:id="@+id/tvPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="@font/arial_medium"
                        tools:text="@string/example_point"
                        android:textSize="10sp"
                        android:textColor="@color/white_text_color" />

                    <TextView
                        android:id="@+id/tvPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:layout_marginTop="-1dp"
                        android:fontFamily="@font/arial_medium"
                        android:text="@string/points"
                        android:textSize="10sp"
                        android:textColor="@color/white_text_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="17dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tvUid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_bold"
                        tools:text="@string/example_uid_user"
                        android:textColor="@color/white_text_color"
                        android:textSize="13sp" />


                    <ImageView
                        android:id="@+id/btnCopyCode"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/copy" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/cvKartu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvPresensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                android:layout_marginEnd="7dp"
                android:backgroundTint="@color/light_grey_horizons_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvPresensi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/presence_label"
                        android:fontFamily="@font/arial_bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvDescPresensi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/presence_desc"
                        android:fontFamily="@font/arial_regular"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="-3dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPresensi"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/ivPresensi"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_scan"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@id/tvDescPresensi"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/icon_scan_qr_code_desc" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvPerijinan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="5dp"
                app:cardElevation="1dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/light_grey_horizons_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvPerijinan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_for_attendance_label"
                        android:fontFamily="@font/arial_bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvDescPerijinan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_for_attendance_desc"
                        android:fontFamily="@font/arial_regular"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="-3dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPerijinan"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/ivPerijinan"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@id/tvDescPerijinan"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/icon_edit_button_desc" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvBonPegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="19dp"
            android:backgroundTint="@color/light_grey_horizons_background"
            app:layout_constraintTop_toBottomOf="@id/llMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBonPegawai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_employee_bon"
                    android:fontFamily="@font/arial_bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8.5dp"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNominalBon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_regular"
                    tools:text="@string/example_bon_amount"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="11dp"
                    android:layout_marginHorizontal="19dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvBonPegawai"
                    app:layout_constraintVertical_bias="0.0"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBonPegawai"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="3dp"
                    android:layout_marginEnd="17dp"
                    android:backgroundTint="@color/black"
                    android:text="@string/label_submit_bill"
                    android:textSize="9sp"
                    android:gravity="center"
                    android:textColor="@color/green_lime_wf"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvKomisiPegawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employee_commission_label"
            android:fontFamily="@font/arial_bold"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginStart="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvBonPegawai"/>

        <LinearLayout
            android:id="@+id/llKomisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2.5dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvKomisiPegawai"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="155dp"
                android:layout_height="145dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="#FFFFFF"
                android:backgroundTint="@color/light_grey_horizons_background"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iDataPerDays"
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="19dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/barchart"
                        android:contentDescription="@string/image_card_balance_desc" />

                    <TextView
                        android:id="@+id/tvLabelKomisiJasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:layout_below="@id/iDataPerDays"
                        android:fontFamily="@font/arial_bold"
                        android:text="@string/sevice_commission_label"
                        android:textAlignment="center"
                        android:textColor="#A7A7AC"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/llCommisionJasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="1.5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tvLabelKomisiJasa">

                        <TextView
                            android:id="@+id/tvValueKomisiJasa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Rp 0"
                            android:maxWidth="80dp"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:fontFamily="@font/arial_medium"
                            android:textAlignment="textStart"
                            android:textColor="@color/black_font_color"
                            android:singleLine="true"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tPerDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="1dp"
                            android:fontFamily="@font/outfit_extralight"
                            android:text="@string/per_day"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="155dp"
                android:layout_height="145dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="5dp"
                app:cardBackgroundColor="#FFFFFF"
                android:backgroundTint="@color/light_grey_horizons_background"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iDataPerDays2"
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="19dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/barchart"
                        android:contentDescription="@string/image_card_balance_desc" />

                    <TextView
                        android:id="@+id/tvLabelKomisiProduk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:layout_below="@id/iDataPerDays2"
                        android:fontFamily="@font/arial_bold"
                        android:text="@string/product_commission_label"
                        android:textAlignment="center"
                        android:textColor="#A7A7AC"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/llCommisionProduk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="1.5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tvLabelKomisiProduk"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvValueKomisiProduk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Rp 0"
                            android:maxWidth="80dp"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:fontFamily="@font/arial_medium"
                            android:textAlignment="textStart"
                            android:textColor="@color/black_font_color"
                            android:singleLine="true"
                            android:textSize="15sp"  />

                        <TextView
                            android:id="@+id/tPerDays2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="1dp"
                            android:fontFamily="@font/outfit_extralight"
                            android:text="@string/per_day"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvInformasiAntrian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/queue_information_label"
            android:fontFamily="@font/arial_bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="-8dp"
            android:layout_marginStart="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llKomisi"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvComplatedQueue"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="8dp"
            app:cardElevation="1dp"
            android:backgroundTint="@color/light_grey_horizons_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInformasiAntrian">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivComplatedQueue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/gradient_lime"
                    android:contentDescription="@string/icon_completed_queue_desc"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_succes" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/ivComplatedQueue"
                    app:layout_constraintTop_toTopOf="@id/ivComplatedQueue"
                    app:layout_constraintBottom_toBottomOf="@id/ivComplatedQueue">

                    <TextView
                        android:id="@+id/tvComplatedQueueValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/arial_bold"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        tools:text="1200" />

                    <!--    android:layout_marginTop="-5dp"    -->

                    <TextView
                        android:id="@+id/tvComplatedQueueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:fontFamily="@font/arial_regular"
                        android:text="@string/status_completed_queue"
                        android:textColor="@color/black_font_color"
                        android:textSize="15sp"
                        />

                    <!--    android:layout_marginTop="-3dp"    -->

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvWaitingQueue"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="10dp"
            app:cardElevation="1dp"
            android:backgroundTint="@color/light_grey_horizons_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvComplatedQueue">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivWaitingQueue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:layout_marginStart="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/gradient_mojito"
                    app:srcCompat="@drawable/ic_pending"
                    android:contentDescription="@string/icon_waiting_queue_ilustration" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/ivWaitingQueue"
                    app:layout_constraintTop_toTopOf="@id/ivWaitingQueue"
                    app:layout_constraintBottom_toBottomOf="@id/ivWaitingQueue">

                    <TextView
                        android:id="@+id/tvWaitingQueueValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/arial_bold"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        tools:text="1200" />

                    <!--    android:layout_marginTop="-5dp"    -->

                    <TextView
                        android:id="@+id/tvWaitingQueueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:fontFamily="@font/arial_regular"
                        android:text="@string/status_waiting_queue"
                        android:textColor="@color/black_font_color"
                        android:textSize="15sp" />

                    <!--    android:layout_marginTop="-3dp"    -->

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvCancelQueue"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="10dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/light_grey_horizons_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvWaitingQueue"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCancelQueue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    app:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/gradient_butterfly"
                    app:srcCompat="@drawable/ic_cancel"
                    android:contentDescription="@string/icon_cancel_queue_ilustration" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/ivCancelQueue"
                    app:layout_constraintTop_toTopOf="@id/ivCancelQueue"
                    app:layout_constraintBottom_toBottomOf="@id/ivCancelQueue">

                    <TextView
                        android:id="@+id/tvCancelQueueValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/arial_bold"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        tools:text="1200" />

                    <!--    android:layout_marginTop="-5dp"    -->

                    <TextView
                        android:id="@+id/tvCancelQueueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:fontFamily="@font/arial_regular"
                        android:text="@string/has_been_canceled"
                        android:textColor="@color/black_font_color"
                        android:textSize="15sp" />

                    <!--    android:layout_marginTop="-3dp"    -->

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>