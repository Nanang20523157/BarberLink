<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.Capster.HomePageCapster">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Toolbar and Header -->
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/placeholder_user_profile"
                android:contentDescription="@string/profile_picture"
                app:layout_constraintTop_toTopOf="@id/tvAppName"
                app:layout_constraintBottom_toBottomOf="@id/tvAppName"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_home_page_capster"
                android:textSize="19.5sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/ivPesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_email"
                android:layout_marginTop="3.5dp"
                android:contentDescription="@string/icon_message_desc"
                app:layout_constraintTop_toTopOf="@id/tvAppName"
                app:layout_constraintBottom_toBottomOf="@id/tvAppName"
                app:layout_constraintEnd_toStartOf="@id/ivSettings"/>

            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_setting"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="3dp"
                android:contentDescription="@string/icon_setting_desc"
                app:layout_constraintTop_toTopOf="@id/tvAppName"
                app:layout_constraintBottom_toBottomOf="@id/tvAppName"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_shake"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black_font_color"
                android:fontFamily="@font/arial_bold"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAppName"/>

            <!-- Card Balance -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvKartu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="7dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWelcome">

                <ImageView
                    android:id="@+id/iKartuId"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/card_balance"
                    android:contentDescription="@string/image_card_balance_desc" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="30dp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/arial_medium"
                        tools:text="Nanang Kurniawan"
                        android:textSize="12sp"
                        android:textColor="#FEFEFE" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_bold"
                        android:paddingTop="17dp"
                        android:text="@string/total_income_label"
                        android:textSize="13sp"
                        android:textColor="#FEFEFE" />

                    <TextView
                        android:id="@+id/tvSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_bold"
                        tools:text="Rp 2.100.000"
                        android:textColor="#FEFEFE"
                        android:layout_marginTop="-2dp"
                        android:textSize="28sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">

                        <ImageView
                            android:id="@+id/ivPoints"
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:src="@drawable/fill_point" />

                        <TextView
                            android:id="@+id/tvPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:fontFamily="@font/arial_medium"
                            tools:text="0"
                            android:textSize="10sp"
                            android:textColor="#FEFEFE" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:fontFamily="@font/arial_medium"
                            android:text="@string/points"
                            android:textSize="10sp"
                            android:layout_marginTop="-1dp"
                            android:textColor="#FEFEFE" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="17dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tvUid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial_bold"
                            tools:text="3308 **** **** ****"
                            android:textColor="#FEFEFE"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/iCopy"
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:src="@drawable/copy" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/cvKartu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvPresensi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="5dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="5dp"
                    android:layout_marginEnd="7dp"
                    app:strokeColor="@color/charcoal_grey_background"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/silver_grey">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPresensi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/presence_label"
                            android:fontFamily="@font/arial_bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tvDescPresensi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/presence_desc"
                            android:fontFamily="@font/arial_regular"
                            android:textSize="11sp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="-3dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvPresensi"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/ivPresensi"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_scan"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@id/tvDescPresensi"
                            app:layout_constraintTop_toTopOf="parent"
                            android:contentDescription="@string/icon_scan_qr_code_desc" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvPerijinan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardElevation="5dp"
                    android:layout_marginStart="5dp"
                    app:strokeColor="@color/charcoal_grey_background"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/silver_grey">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPerijinan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_for_attendance_label"
                            android:fontFamily="@font/arial_bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tvDescPerijinan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_for_attendance_desc"
                            android:fontFamily="@font/arial_regular"
                            android:textSize="11sp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="-3dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvPerijinan"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/ivPerijinan"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_edit"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@id/tvDescPerijinan"
                            app:layout_constraintTop_toTopOf="parent"
                            android:contentDescription="@string/icon_edit_button_desc" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvBonPegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="7dp"
                app:cardElevation="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="19dp"
                app:strokeColor="@color/charcoal_grey_background"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/silver_grey"
                app:layout_constraintTop_toBottomOf="@id/llMenu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvBonPegawai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_employee_bon"
                        android:fontFamily="@font/arial_bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="9dp"
                        android:layout_marginHorizontal="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvNominalBon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/arial_regular"
                        tools:text="Rp 200.000"
                        android:textColor="@color/black"
                        android:layout_marginBottom="9dp"
                        android:layout_marginTop="-2.5dp"
                        android:textSize="12.5sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBonPegawai"
                        app:layout_constraintVertical_bias="0.0" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBonPegawai"
                        android:layout_width="95dp"
                        android:layout_height="35dp"
                        android:paddingHorizontal="0dp"
                        android:paddingVertical="3dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="@color/black"
                        android:text="@string/label_submit_bill"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:textColor="@color/green_lime_wf"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvKomisiPegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employee_commission_label"
                android:fontFamily="@font/arial_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginStart="27dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvBonPegawai"/>

            <LinearLayout
                android:id="@+id/llKomisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-2.5dp"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvKomisiPegawai"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:backgroundTint="@color/silver_grey"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/iDataPerDays"
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-22dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/barchart"
                        android:contentDescription="@string/image_card_balance_desc" />

                    <TextView
                        android:id="@+id/tvLabelKomisiJasa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="56dp"
                        android:fontFamily="@font/arial_bold"
                        android:text="@string/sevice_commission_label"
                        android:textAlignment="center"
                        android:textColor="#A7A7AC"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="43dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvValueKomisijasa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/arial_medium"
                            tools:text="Rp 1.500.000"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tPerDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/outfit_extralight"
                            android:text="@string/per_day"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:backgroundTint="@color/silver_grey"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/iDataPerDay"
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-22dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/barchart"
                        android:contentDescription="@string/image_chart_bar_ilustration" />

                    <TextView
                        android:id="@+id/tvLabelKomisiProduk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="56dp"
                        android:fontFamily="@font/arial_bold"
                        android:text="@string/product_commission_label"
                        android:textAlignment="center"
                        android:textColor="#A7A7AC"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="43dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvValueKomisiProduk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/arial_medium"
                            tools:text="Rp 1.500.000"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tPerDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/outfit_extralight"
                            android:text="@string/per_day"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tvInformasiAntrian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/queue_information_label"
                android:fontFamily="@font/arial_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="-8dp"
                android:layout_marginStart="27dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llKomisi"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvComplatedQueue"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="19dp"
                android:layout_marginTop="8dp"
                app:cardElevation="5dp"
                android:backgroundTint="@color/silver_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvInformasiAntrian">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivComplatedQueue"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_marginStart="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/gradient_lime"
                        app:srcCompat="@drawable/ic_succes"
                        android:contentDescription="@string/icon_complated_queue_desc" />

                    <TextView
                        android:id="@+id/tvComplatedQueueValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_bold"
                        tools:text="12"
                        android:layout_marginTop="18.5dp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black_font_color"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivComplatedQueue" />

                    <TextView
                        android:id="@+id/tvComplatedQueueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_regular"
                        android:text="@string/label_complated_queue"
                        android:layout_marginTop="-5dp"
                        android:layout_marginStart="22dp"
                        android:textColor="@color/black_font_color"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@+id/ivComplatedQueue"
                        app:layout_constraintTop_toBottomOf="@id/tvComplatedQueueValue" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvWaitingQueue"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="19dp"
                android:layout_marginTop="10dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/silver_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvComplatedQueue"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivWaitingQueue"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_marginStart="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/gradient_butterfly"
                        app:srcCompat="@drawable/ic_pending"
