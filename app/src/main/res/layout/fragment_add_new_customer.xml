<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey_horizons_background"
    android:layout_gravity="center"
    app:cardCornerRadius="45dp"
    android:layout_marginHorizontal="30dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="45dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_new_customer"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/arial_bold"
            android:layout_marginTop="50dp"
            android:textSize="21sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSectionTitle"
            android:text="@string/label_customer_identity"
            android:textSize="12sp"
            android:layout_gravity="start"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/black_font_color"
            android:layout_marginTop="15dp"
            android:layout_marginStart="3dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wrapperPassword"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@id/passwordLabel"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/green_lime_wf"
            android:layout_marginTop="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:hint="@string/hint_fullname"
                android:inputType="text"
                android:textSize="12.5sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_user" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wrapperConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@id/wrapperPassword"
            app:boxStrokeColor="@color/green_lime_wf"
            app:hintEnabled="false"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:hint="@string/hint_phone"
                android:inputType="text"
                android:textSize="12.5sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_phone" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSectionTitle"
            android:text="Gander:"
            android:textSize="12sp"
            android:gravity="start"
            android:layout_gravity="start"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/black_font_color"
            android:layout_marginTop="9dp"
            android:layout_marginStart="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="1dp"
            android:paddingVertical="4dp"
            android:paddingEnd="5dp"
            android:paddingStart="0dp"
            android:gravity="center_horizontal"
            android:clipChildren="false"
            android:clipToPadding="false">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="0dp"
                android:layout_height="43dp"
                app:hintEnabled="false"
                app:boxStrokeColor="@color/green_lime_wf"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:textSize="15sp"
                    android:hint="Laki-Laki"
                    android:inputType="text"/>

<!--                <Spinner-->
<!--                    android:id="@+id/gender_spinner"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:background="@null" />-->

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/llGander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/light_blue_horizons_background">

                <ImageView
                    android:id="@+id/ivGender"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/ic_male"
                    android:contentDescription="@string/icon_gander_ilustration" />

                <!--                    <TextView-->
                <!--                        android:id="@+id/tvGander"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        tools:text="laki-laki"-->
                <!--                        android:fontFamily="@font/arial_bold"-->
                <!--                        android:textColor="@color/black_font_color"-->
                <!--                        android:textSize="10sp"-->
                <!--                        android:layout_marginStart="2dp"-->
                <!--                        android:layout_marginEnd="3dp"-->
                <!--                        android:gravity="center"-->
                <!--                        android:layout_gravity="center_vertical"/>-->

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Finish Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="47dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/black"
            android:text="Simpan"
            android:textStyle="bold"
            android:textColor="@color/green_lime_wf" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>
