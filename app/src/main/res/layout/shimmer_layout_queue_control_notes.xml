<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="70dp"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/background_notes_order_customer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/label_notes"
        android:textSize="11.5sp"
        android:layout_weight="1"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/arial_medium"
        android:textColor="@color/platinum_grey_background" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerTvNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.5dp"
        android:layout_marginBottom="4dp"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="0.7"
        app:shimmer_direction="left_to_right"
        app:shimmer_duration="500"
        app:shimmer_repeat_count="@android:integer/config_shortAnimTime"
        app:shimmer_repeat_delay="500"
        app:shimmer_shape="linear"
        app:shimmer_tilt="0">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="40dp">

            <TextView
                android:id="@+id/tvNotes"
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:textAlignment="center"
                android:ellipsize="end"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/shimmer_corner_tiga_dp_400"
                android:textSize="11sp"
                android:fontFamily="@font/arial_medium"
                android:textColor="@color/black_font_color"/>

            <TextView
                android:id="@+id/tvNotes2"
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:textAlignment="center"
                android:ellipsize="end"
                android:layout_marginTop="2.5dp"
                android:background="@drawable/shimmer_corner_tiga_dp_400"
                android:textSize="11sp"
                android:fontFamily="@font/arial_medium"
                android:textColor="@color/black_font_color"/>

            <TextView
                android:id="@+id/tvNotes3"
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:textAlignment="center"
                android:ellipsize="end"
                android:layout_marginTop="2.5dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/shimmer_corner_tiga_dp_400"
                android:textSize="11sp"
                android:fontFamily="@font/arial_medium"
                android:textColor="@color/black_font_color"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:ellipsize="end"
        android:textSize="11sp"
        android:text="***"
        android:layout_marginTop="7.7dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/arial_medium"
        android:textColor="@color/black_font_color"/>

</LinearLayout>