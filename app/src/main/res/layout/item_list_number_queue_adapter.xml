<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvQueueNumberPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="0.5dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="2dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/light_grey_horizons_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvQueueNumberPrefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/template_number_prefix"
                android:paddingHorizontal="7dp"
                android:paddingVertical="3dp"
                android:textSize="13sp"
                android:gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black_font_color" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvSpaceOnNumber"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="0.5dp"
            android:layout_marginTop="5.5dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="2dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/light_grey_horizons_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvQueueNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        app:strokeColor="@color/charcoal_grey_background"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/alpha_yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:text="@string/label_queue_number"
            android:textSize="7sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_font_color"/>

        <TextView
            android:id="@+id/tvCurrentQueueNumber"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            tools:text="080"
            android:textSize="22sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textAlignment="center"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="4.5dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="22dp"
            android:textStyle="bold"
            android:textColor="@color/black_font_color" />

    </com.google.android.material.card.MaterialCardView>

</androidx.appcompat.widget.LinearLayoutCompat>