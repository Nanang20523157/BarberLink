<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="7dp"
    app:cardCornerRadius="17dp"
    android:backgroundTint="@color/light_grey_horizons_background"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="18dp"
        android:paddingVertical="20dp">

        <ImageView
            android:id="@+id/imageLayanan"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_service_icon_medium"
            android:scaleType="centerCrop"
            android:layout_marginStart="2dp"
            tools:src="@drawable/service_icon_example" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="-4dp"
            android:paddingStart="12dp"
            android:paddingEnd="4dp">

            <TextView
                android:id="@+id/tvTitleLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Haircut"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@android:color/black"
                android:textSize="13.5sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:background="@drawable/background_dot_service"
                android:layout_marginTop="3.5dp">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/full_star"
                    android:contentDescription="@string/star_image_desc" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="4.5"
                    android:layout_marginStart="2.7dp"
                    android:layout_marginTop="0.8dp"
                    android:textSize="11sp"
                    android:fontFamily="@font/arial_bold"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="@android:color/black" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:background="@color/platinum_grey_background" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_money"
                    android:contentDescription="@string/money_icon_desc" />

                <TextView
                    android:id="@+id/tvHargaLayanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp 30.000"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="5dp"
                    android:textSize="11.2sp"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="@color/dark_grey_font_color" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
