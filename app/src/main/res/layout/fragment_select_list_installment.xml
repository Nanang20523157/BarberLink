<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:orientation="vertical">

    <!--    <androidx.core.widget.NestedScrollView-->
    <com.example.barberlink.CustomView.CustomNestedScrollView
        android:id="@+id/nvBackgroundScrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_scrim"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cdResetQueueBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="20dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="45dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="-30dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="-30dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="19dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvQuestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/arial_bold"
                            android:gravity="center"
                            android:text="Daftar Angsuran Pegawai"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="18.6sp" />

                        <TextView
                            android:id="@+id/tvMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="21dp"
                            android:fontFamily="@font/arial_medium"
                            android:gravity="center"
                            android:text="Pilih daftar angsuran pegawai yang akan ditagihkan sebagai potongan gaji bulan ini."
                            android:textSize="11.6sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvListInstallment"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="-33dp"
                    android:layout_marginTop="-40dp"
                    android:layout_marginEnd="-33dp"
                    android:nestedScrollingEnabled="true"
                    android:paddingBottom="25dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:scrollbars="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_list_installment_adapter" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="-30dp"
                    android:layout_marginTop="-22dp"
                    android:layout_marginEnd="-30dp"
                    android:layout_marginBottom="18dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/silver_grey"
                    app:cardCornerRadius="19dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivPaymentMethodIcon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="18dp"
                                android:src="@drawable/dollars"
                                android:layout_gravity="center"
                                android:contentDescription="@string/icon_payment_desc" />

                            <!-- Harga Total -->
                            <TextView
                                android:id="@+id/tvTotalPrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center"
                                tools:text="Rp 10.000.000"
                                android:textStyle="bold"
                                android:textSize="16.5sp"
                                android:layout_marginEnd="10dp"
                                android:textColor="@android:color/black" />

                            <!-- Button Lanjutkan -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnContinue"
                                android:layout_width="90dp"
                                android:layout_height="38dp"
                                android:paddingHorizontal="0dp"
                                android:layout_marginEnd="18dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:backgroundTint="@color/black_font_color"
                                android:text="@string/btn_next"
                                android:textColor="@color/green_lime_wf"
                                app:cornerRadius="6dp" />

                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnServicesAddedContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginHorizontal="18dp"
                            android:layout_marginBottom="21.5dp"
                            app:cardBackgroundColor="@color/black_font_color"
                            android:padding="8dp"
                            app:cardCornerRadius="6dp"
                            app:strokeColor="@color/black_font_color"
                            app:strokeWidth="1dp"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvTotalItem"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    tools:text="@string/item_counting_selected"
                                    android:textColor="@color/green_lime_wf"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="10dp" />

                                <ImageButton
                                    android:id="@+id/btnDeleteAll"
                                    android:layout_width="33dp"
                                    android:layout_height="33dp"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/ic_rubbish_bin"
                                    android:contentDescription="@string/btn_remove_service_desc"
                                    android:layout_gravity="center_vertical"
                                    app:tint="@color/green_lime_wf"
                                    android:padding="10dp"
                                    android:layout_marginEnd="5dp"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

    </com.example.barberlink.CustomView.CustomNestedScrollView>

</RelativeLayout>
