<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/icon_back_button_desc" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/select_role_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:orientation="vertical">

            <!-- Greeting Message -->
            <TextView
                android:id="@+id/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_in_select_role"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="13dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instructions_guide"
                android:fontFamily="@font/arial_medium"
                android:textSize="14sp"
                android:textColor="@color/black_font_color"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="40dp" />

            <!-- Role Option: Owner/Admin -->
            <LinearLayout
                android:id="@+id/btnAdminOwner"
                android:layout_width="135dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/role_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/owner_admin_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/back_to_back_owner"
                    android:contentDescription="@string/image_owner_ilustration_desc" />

                <TextView
                    android:id="@+id/owner_admin_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_select_owner_admin"
                    android:gravity="center"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/role_teks_background"
                    android:textSize="11sp"
                    android:fontFamily="@font/outfit_bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="-6dp" />
            </LinearLayout>

            <!-- Divider -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:textSize="14sp"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/black_font_color"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <!-- Role Option: Pegawai/Capster -->
            <LinearLayout
                android:id="@+id/btnPegawai"
                android:layout_width="135dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/role_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/pegawai_capster_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/female_hairdresser_team"
                    android:contentDescription="@string/image_capster_ilustration_desc" />

                <TextView
                    android:id="@+id/pegawai_capster_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_select_employee"
                    android:gravity="center"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/role_teks_background"
                    android:textSize="11sp"
                    android:fontFamily="@font/outfit_bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="-5.5dp" />
            </LinearLayout>

            <!-- Divider -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:textSize="14sp"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/black_font_color"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <!-- Role Option: Kasir/Teller -->
            <LinearLayout
                android:id="@+id/btnKasirTeller"
                android:layout_width="135dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/role_background"
                android:padding="16dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/kasirTellerImage"
                    android:layout_width="90dp"
                    android:layout_height="96dp"
                    android:src="@drawable/steps_by_steps_process"
                    android:contentDescription="@string/image_teller_ilustration_desc" />

                <TextView
                    android:id="@+id/kasirTellerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_select_kasir_teller"
                    android:gravity="center"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/role_teks_background"
                    android:textSize="11sp"
                    android:fontFamily="@font/outfit_bold"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>

        <!-- Sign Up Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/mainContent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:fontFamily="@font/arial_medium"
                android:text="@string/don_t_have_any_account"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/arial_medium"
                android:text="@string/underline_sign_up"
                android:textColor="@color/green_lime_wf"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
