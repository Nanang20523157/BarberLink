<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="30dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="10dp"
        android:padding="20dp"
        android:background="@drawable/rounded_background">

        <TextView
            android:id="@+id/tvWindowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/ups_text"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvWindowDetail"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:textSize="12.5sp"
            android:text="@string/warning_schedule_template"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingHorizontal="40dp"
                android:layout_marginStart="1dp"
                android:paddingTop="4.6dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="13sp"
                android:text="@string/display_text"
                android:backgroundTint="@color/black"
                android:textColor="@color/green_lime_wf"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvCountDown"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:layout_marginEnd="8dp"
                tools:text="(51mm:34ss)"
                android:fontFamily="@font/arial_medium"
                android:textSize="14sp"
                android:background="@drawable/background_count_down"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="center|end" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
