<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BarberLink" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
<!--        <item name="android:statusBarColor">@color/dark_black_gradation</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

<!--        <item name="materialAlertDialogTheme">@style/MonthPickerDialogStyle</item>-->
    </style>

    <style name="Theme.BarberLink.WithoutStatusBar" parent="Base.Theme.BarberLink" >
        <item name="android:statusBarColor">@color/dark_black_gradation</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.BarberLink" parent="Base.Theme.BarberLink" />

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
<!--        <item name="materialCalendarHeaderDivider">@style/ThemeOverlay.App.DatePicker.HeaderDivider</item>-->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker.HeaderDivider" parent="@style/Widget.Material3.MaterialCalendar.HeaderDivider">
        <item name="android:background">@color/sky_blue</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.CustomComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.App.CustomComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>