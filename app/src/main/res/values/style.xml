<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="YourCustomTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#71CEB8</item>
    </style>

    <style name="PrefixTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PrefixTextAppearance2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyTransparentFragmentStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
<!--        <item name="android:backgroundDimAmount">0.32</item>-->
    </style>

    <style name="MyFullScreenWithBGScrim" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->
        <!--        <item name="android:backgroundDimAmount">0.32</item>-->
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_color</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/checkbox_color</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorSurfaceVariant">?attr/colorSurfaceContainerHighest</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/white</item>
        <item name="colorOnContainer">@color/green_lime_wf</item>
    </style>

    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ExtendedFloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.ExtendedFloatingActionButton" parent="">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <style name="MonthPickerDialogStyle">
        <item name="monthBgColor">@color/white</item>
        <item name="monthBgSelectedColor">@color/pink_calendar</item>
        <item name="monthFontColorSelected">@color/white</item>
        <item name="monthFontColorNormal">@color/black</item>
        <item name="monthFontColorDisabled">@color/disable_grey_background</item>

        <item name="headerBgColor">@color/pink_calendar</item>
        <item name="headerFontColorSelected">@color/white</item>
        <item name="headerFontColorNormal">@color/disable_grey_background</item>
        <item name="headerTitleColor">@color/white</item>

        <item name="dialogActionButtonColor">@color/pink_calendar</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">26dp</item>
    </style>

</resources>